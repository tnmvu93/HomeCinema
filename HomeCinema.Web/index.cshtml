@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="homeCinema">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Cinema</title>
	<meta charset="utf-8" />
    <link href="@Url.Content("~/Content/css/boostrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/boostrap-theme.min.css")" rel="stylesheet" type="text/css" />
</head>
<body ng-controller="rootController">
    <top-bar></top-bar>
    <div class="row-offcanvas row-offcanvas-left">
        <side-bar></side-bar>
        <div id="main">
            <div class="col-md-12">
                <p class="visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                    </button>
                </p>
                <div class="page {{ pageClass }}" ng-view></div>
            </div>
        </div>
    </div>
</body>
</html>
